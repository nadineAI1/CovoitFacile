rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /rides/{rideId} {
      // Lecture pour utilisateurs connectés
      allow read: if request.auth != null;

      // Création : seul un utilisateur authentifié peut créer un ride et ownerId doit être son uid
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.seatsAvailable is int
        && request.resource.data.seatsAvailable >= 0
        && request.resource.data.origin is string
        && request.resource.data.destination is string;

      // Mise à jour / suppression : seul le propriétaire peut modifier/supprimer
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    match /users/{userId} {
      // Lecture : utilisateurs authentifiés
      allow read: if request.auth != null;

      // Écriture : un utilisateur ne peut écrire que son propre document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Par défaut, refuser tout autre accès
    match /{document=**} {
      allow read, write: if false;
    }
  }
}